@model ShopCar.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
@if(TempData.Peek("ErrorProduct") != null)
    {
    <div class="alert alert-success">
        <p>
            @TempData["ErrorProduct"]
        </p>

    </div>

    }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale" class="control-label"></label>
                <input asp-for="Sale" class="form-control" />
                <span asp-validation-for="Sale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
              
                @Html.TextAreaFor(m=>m.About,new {@class="form-control"})
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reviews" class="control-label"></label>
                @Html.TextAreaFor(m=>m.Reviews,new {@class="form-control"})
                <span asp-validation-for="Reviews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photos" class="control-label"></label>
                <input asp-for="Photos" type="file" id="imageUpload" class="form-control" />

                @if(@Model.Photos != null){        <img class="form-control" id="imgpreview" src="\Content\Products\@Model.Name\@Model.Photos" />}

        else{<img class="form-control" id="imgpreview" src="\Content\noimage.jpg" />}
                
                <span asp-validation-for="Photos" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
CKEDITOR.replace("About")
 CKEDITOR.replace("Reviews")
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
